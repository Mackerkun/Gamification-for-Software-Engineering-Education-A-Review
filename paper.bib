  shorttitle = {How to Merge Gamification Efforts for Programming and Modelling},
  booktitle = {2021 {{ACM}}/{{IEEE International Conference}} on {{Model Driven Engineering Languages}} and {{Systems Companion}} ({{MODELS-C}})},
